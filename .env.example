# Database
DATABASE_URL=postgres://postgres:postgres@localhost:55432/payloadexchange

# x402 Payment Configuration
X402_FACILITATOR_URL=https://x402.org/facilitator
X402_VERIFY_PATH=/verify
X402_SETTLE_PATH=/settle
X402_FACILITATOR_BEARER_TOKEN=
X402_NETWORK=base-sepolia
X402_PAY_TO=0xYourWalletAddress
X402_ASSET=0xUSDCContractAddress

# Server
PUBLIC_BASE_URL=http://localhost:3000
# Comma-separated list of allowed frontend origins.
# For deploy-test on Vercel/Render, set this to your actual frontend domains.
# Example:
# CORS_ALLOW_ORIGINS=https://subsidy-payment.vercel.app,https://subsidy-payment-git-deploy-test-<team>.vercel.app,http://localhost:5173
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000,https://subsidy-payment.vercel.app,https://chatgpt.com,https://chat.openai.com
# MCP server public origin to allow cross-origin requests from GPT App SDK server.
MCP_SERVER_URL=http://localhost:3001
TESTNET_PAYMENT_SIGNATURE_DESIGN=base64_payment_signature_for_design_route
PORT=3000
SPONSORED_API_CREATE_PRICE_CENTS=25
SPONSORED_API_TIMEOUT_SECS=12

# GPT Apps Integration
# API key for authenticating GPT Custom Actions requests.
# Set this to a secure random string and configure the same key in your GPT Builder.
GPT_ACTIONS_API_KEY=your-secret-api-key-here

# Agent Discovery Integration (Claude/Openclaw/general agents)
# Optional bearer token for /agent/discovery/services, /claude/discovery/services,
# and /openclaw/discovery/services. Leave empty to disable auth in dev.
AGENT_DISCOVERY_API_KEY=
# Shared in-memory rate limit per minute across all discovery aliases.
AGENT_DISCOVERY_RATE_LIMIT_PER_MIN=120

# Logging
RUST_LOG=payloadexchange_mvp=info,tower_http=info

# MCP Server
PORT=3001
RUST_BACKEND_URL=http://localhost:3000
MCP_INTERNAL_API_KEY=your-mcp-internal-api-key
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=your-auth0-api-audience
PUBLIC_URL=http://localhost:3001
LOG_LEVEL=info
# OAuth認証トグル (true/false)
# 未設定の場合、AUTH0_DOMAINとAUTH0_AUDIENCEが両方あればtrue、なければfalse
AUTH_ENABLED=false